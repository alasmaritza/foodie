<div class="box col-6 offset-3">
    <h1>Enter Your Place Details:</h1>
    <%= simple_form_for @place do |f| %>
        <%= f.input :name, class: 'input' %>
            <%= f.input :address, class: 'input' %>
                <%= f.input :description, class: 'input' %>
                    <br>
                    <%= f.submit 'Create', class: 'btn' %>
                        <% end %>
</div>