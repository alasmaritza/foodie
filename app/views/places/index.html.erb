<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'cafe.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        <h3>Find the best cafes</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'Pizza-Parlor.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        <h3>And the best pizza parlors</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'BurgerJoint.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        <h3>And the best burger joints</h3>
      </div>
    </div>
  </div>
</div>


<% @places.each do |place| %>
<div class="box col-10 offset-1">
    <h1 class="placeName"><%= link_to place.name, place_path(place) %></h1>
    <p class="address"><i><%= place.address %></i></p><br><br>
    <p><%= place.description %></p><br>
    
    <% if place.user.present? %>
    <small><%= place.user.email %></small>
    <% end %>
    
    <% if place.comments.present? %>
    <div class="col-10 offset-1">
  <blockquote>
    <% if place.comments.last.humanized_rating.present? %>
    <b><%= place.comments.last.humanized_rating %></b> -
    <% end %>
    <%= place.comments.last.message %>
    <small><%= place.comments.last.user.email %></small>
  </blockquote>
</div>
<% end %>
</div>
<% end %>
